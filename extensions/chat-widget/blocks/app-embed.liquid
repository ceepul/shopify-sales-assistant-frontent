<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link
  rel="preconnect"
  href="https://fonts.gstatic.com"
  crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<chat-widget
  data-close-icon-url="{{ 'down-chevron.svg' | asset_url }}"
  data-close-icon-dark-url="{{ 'down-chevron-dark.svg' | asset_url }}"
  data-back-icon-url="{{ 'back-icon.svg' | asset_url }}"
  data-back-icon-dark-url="{{ 'back-icon-dark.svg' | asset_url }}"
  data-reset-icon-url="{{ 'reset-icon.svg' | asset_url }}"
  data-reset-icon-dark-url="{{ 'reset-icon-dark.svg' | asset_url }}"
  data-send-icon-url="{{ 'send2.svg' | asset_url }}"
  data-capabilities-icon-url="{{ 'capabilities1.svg' | asset_url }}"
  data-x-icon-url="{{ 'x-icon.svg' | asset_url }}"
  data-x-icon-dark-url="{{ 'x-icon-dark.svg' | asset_url }}"
  data-chat-icon-url="{{ 'chat-icon.svg' | asset_url }}"
  data-chat-icon-dark-url="{{ 'chat-icon-dark.svg' | asset_url }}"

  data-auto-open="{{ block.settings.auto-open }}"
  data-position="{{ block.settings.position }}"
  data-domain="{{ shop.permanent_domain }}"></chat-widget>

{% schema %}
  {
    "name": "AI Shopping Assistant",
    "target": "head",
    "javascript": "chat-widget.js",
    "settings": [
      {
        "id": "position",
        "type": "select",
        "label": "Position",
        "default": "right",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "right",
            "label": "Right"
          }
        ]
      }, {
        "id": "auto-open",
        "type": "checkbox",
        "label": "Open Automatically",
        "default": false
      }
    ]
  }
{% endschema %}